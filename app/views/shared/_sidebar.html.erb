<div class="sidebar">
  <div class='logo'>
    <%= link_to image_tag("ExamScorer-logo.png", class:"ExamScorer-logo"), root_path %>
  </div>
  <div class='student'>
    <% if student_signed_in? %>
        <%= link_to "#{current_student.last_name}#{current_student.first_name}", "#", class: "nav" %>
        <%= link_to "ログアウト", destroy_student_session_path, method: :delete, class: "nav" %>
    <% else %>
        <%= link_to '生徒登録', new_student_registration_path, class: "nav" %>
        <%= link_to 'ログイン', new_student_session_path, class: "nav" %>
    <% end %>
  </div>
</div>