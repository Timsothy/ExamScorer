<div class='exams'>
  <div class='sidebar'>
    <%= render 'shared/sidebar' %>
  </div>
  <div class='exams-main'>
      <table>
        <tr>
          <th colspan="4"><%= @exam.exam_name.name %></th>
        </tr>
        <tr>
          <td>国語</td><td><%= @exam.japanese_score %></td><td>平均点</td><td><%= @exam.japanese_average_score %></td>
        </tr>
        <tr>
          <td>数学</td><td><%= @exam.mathematics_score %></td><td>平均点</td><td><%= @exam.mathematics_average_score %></td>
        </tr>
        <tr>
          <td>英語</td><td><%= @exam.english_score %></td><td>平均点</td><td><%= @exam.english_average_score %></td>
        </tr>
        <tr>
          <td>社会</td><td><%= @exam.sosial_score %></td><td>平均点</td><td><%= @exam.sosial_average_score %></td>
        </tr>
        <tr>
          <td>理科</td><td><%= @exam.science_score %></td><td>平均点</td><td><%= @exam.science_average_score %></td>
        </tr>
        <tr>
          <td>合計</td><td colspan="3"><%= @exam.total_score %></td>
        </tr>
        <tr>
          <td>順位</td><td colspan="3"><%= @exam.rank %></td>
        </tr>
      </table>
      <div class="option">
        <% if student_signed_in? && current_student.id == @exam.student_id %>
          <%= link_to '編集', edit_exam_path(@exam), method: :get , class:"edit-btn" %>
          <%= link_to '削除', exam_path(@exam), method: :delete, class:"delete-btn" %>
          <%= link_to(new_exam_path, class: "exam-btn") do %>
          <span class="exam-btn-text">新規テスト</span>
          <%= image_tag 'plus-icon.png' , size: '180x50' ,class: "exam-btn-icon" %>
          <% end %>
        <% end %>
      </div>
  </div>
</div>